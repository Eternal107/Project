<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Xamarin_JuniorProject.Controls"
             x:Class="Xamarin_JuniorProject.Views.AddPinPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddPinCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding CurrentPin.Label}" Placeholder="Label"/>
            <Editor Text="{Binding CurrentPin.Description}" Placeholder="Discription" AutoSize="TextChanges" MaxLength="200"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="Favorite pin"/>
                <CheckBox IsChecked="{Binding CurrentPin.IsFavorite}"/>
            </StackLayout>
            <controls:CustomMap PinSource="{Binding Pins}"
                                MapLongClicked="{Binding SetPositionCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>