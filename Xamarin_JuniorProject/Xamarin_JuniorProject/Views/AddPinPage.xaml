<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Xamarin_JuniorProject.Controls"
             x:Class="Xamarin_JuniorProject.Views.AddPinPage">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Command="{Binding AddPinCommand}"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding CurrentPin.Label}" Placeholder="Label"/>
            <Entry Text="{Binding CurrentPin.Position.Longitude}" Placeholder="Longitude" IsEnabled="False"/>
            <Entry Text="{Binding CurrentPin.Position.Latitude}" Placeholder="Latitude" IsEnabled="False"/>
            <Editor Text="{Binding CurrentPin.Tag}" Placeholder="Description" AutoSize="TextChanges" MaxLength="100"/>
            <StackLayout >
                <Label Text="Favorite pin"/>
                <CheckBox IsChecked="{Binding CurrentPin.IsFavorite}"/>
            </StackLayout>
            <controls:CustomMap PinSource="{Binding Pins}" MyMapLongClicked="{Binding LongClicked}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>