<?xml version="1.0" encoding="UTF-8"?>
<t1:SlideMenuView  xmlns:t1="clr-namespace:SlideOverKit;assembly=SlideOverKit"
                   xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  x:Class="Xamarin_JuniorProject.SlideUp.MyPage">

    <Grid>
      <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
       <StackLayout Grid.ColumnSpan="2" >

    
        

            <Entry Text="{Binding NameText}"   FontSize="20" IsEnabled="False" />
            <Editor Text="{Binding DescriptionText}"   FontSize="20" AutoSize="TextChanges" MaxLength="100" IsEnabled="False" />
        
     <StackLayout Orientation="Horizontal">

            <Button  Text="Delete" TextColor="White"  FontSize="20"  BackgroundColor="Red" Grid.Column="0" HorizontalOptions="FillAndExpand"/>
        <Button  Text="Settings" TextColor="White"  FontSize="20"  BackgroundColor="Blue" Grid.Column="1" HorizontalOptions="FillAndExpand"/>
     </StackLayout>
        
        
       
        </StackLayout> 
    </Grid>
	
	
</t1:SlideMenuView >